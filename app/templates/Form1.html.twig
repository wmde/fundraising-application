                            <label for="form1-payment-type-1">&Uuml;berweisung</label>
                        </li>

                        <li>
                            <input type="radio" class="payment-type-select" id="form1-payment-type-2" name="zahlweise" value="MCP" title="Kreditkarte" required="required">
                            <label for="form1-payment-type-2">Kreditkarte</label>
                        </li>

                        <li>
                            <input type="radio" class="payment-type-select" id="form1-payment-type-3" name="zahlweise" value="BEZ" title="Lastschrift" required="required" checked="checked">
                            <label for="form1-payment-type-3">Lastschrift</label>
                        </li>

                        <li class="last">
                            <input type="radio" class="payment-type-select" id="form1-payment-type-4" name="zahlweise" value="PPL" title="PayPal" required="required">
                            <label for="form1-payment-type-4">Paypal</label>
