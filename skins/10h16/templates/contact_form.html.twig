{% import 'Form_Utils.twig' as util %}

{% extends 'Base_Layout.html.twig' %}

{% block main %}

  <form method="post" action="{$ basepath $}/contact/get-in-touch" novalidate="">
    <section id="contact-form">
      <div class="container clearfix">
        <div class="ltcol">
          &nbsp;
        </div>

        <div class="ctcol">
          <div class="box partial rounded no-margin">
            <div class="box-header container clearfix">
              <span class="icon-envelope-alt">Kontakt</span>
            </div>

            <div class="box-section">
              <div class="container clearfix">

                <div class="input-container">
                  <label for="first-name">Name</label>
                  <input id="first-name" name="firstname" type="text" value="{$ firstname $}" autocomplete="off" pattern="^((?![M|m]ustermann).)*$" title="Groß- und Kleinbuchstaben, Bindestriche und Leerzeichen" placeholder="Vorname" optional="optional" class="optional">
                  <span class="validation icon-placeholder"></span>
                  {$ util.form_error('firstname', errors) $}

                  <input id="last-name" name="lastname" type="text" value="{$ lastname $}" autocomplete="off" pattern="^((?![M|m]ustermann).)*$" title="Groß- und Kleinbuchstaben, Bindestriche, Leerzeichen und Punkte" placeholder="Nachname" optional="optional" class="optional">
                  <span class="validation icon-placeholder"></span>
                  {$ util.form_error('lastname', errors) $}
                </div>

                <div class="input-container">
                  <label for="email">Email-Adresse</label>
                  <input id="email" name="email" type="text" value="{$ email $}" autocomplete="off" placeholder="z.B. name@domain.de" required="required" class="required">
                  <span class="validation icon-placeholder"></span>
                  {$ util.form_error('email', errors) $}
                </div>

                <div class="input-container">
                  <label for="donationNumber">Referenz</label>
                  <input id="donationNumber" name="donationNumber" type="text" value="" autocomplete="off" placeholder="Spenden- oder Adressnummer" class="required">
                  <span class="validation icon-placeholder"></span>
                </div>

                <div class="input-container category">
                  <label for="category">Thema</label>
                  <select id="category" name="category" class="category">
                    <option value="" data-behavior="placeholder" disabled {% if not category %}selected{% endif %}>{$ 'contact_topic_title' | trans $}</option>
                      {% for cat in contact_categories %}
                        <option {% if category == cat | trans %}selected{% endif %}>{$ cat | trans $}</option>
                      {% endfor %}
                  </select>
                  {$ util.form_error('subject', errors) $}
                </div>

                <div class="input-container">
                  <label for="subject">Betreff</label>
                  <input id="subject" class="required" name="subject" type="text" value="{$ subject $}" autocomplete="off" required="required" placeholder="Betreff">
                  <span class="validation icon-placeholder"></span>
                  {$ util.form_error('subject', errors) $}
                </div>

                <div class="input-container">
                  <label for="messageBody">Nachricht</label>
                  <textarea id="messageBody" class="required" name="messageBody" type="text" required="required" placeholder="Ihre Nachricht an uns">{$ messageBody $}</textarea>
                  {$ util.form_error('messageBody', errors) $}
                </div>

              </div>
            </div>

          </div>

        </div>

        <div class="rtcol">
          <div class="icon-hand-right _icon-list-item last">
            <p>
              <strong>Spenden</strong>
            </p>
            <p>
              <a href="{$ path( '/' ) $}" target="_blank">{$ 'back_to_donation' | trans $}</a>
            </p>
          </div>
        </div>
      </div>
    </section>

    <section id="contact-form-submit">
      <div class="container clearfix">
        <div class="ltcol">
          &nbsp;
        </div>

        <div class="ctcol">
          <div class="box partial rounded">

            <div class="box-footer clearfix">
              <div class="tab-1 tab container clearfix ">
                <button id="contactFormSubmit" type="submit" class="f-right">Kontaktanfrage absenden<span class="icon-ok"></span></button>
              </div>

            </div>

          </div>

        </div>
      </div>
    </section>

  </form>

{% endblock %}