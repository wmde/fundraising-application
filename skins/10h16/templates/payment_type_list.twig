{# paramters:
	paymentTypes
	formId
	checkedPaymentType (optional)
#}
<ul class="clearfix payment-type-list {% if paymentTypes|length % 4 == 1 %}three-col{% else %}four-col{% endif %}">
{% for paymentType in paymentTypes %}
	<li
	{% if loop.first %}
		class="first"
	{% elseif loop.last %}
		class="last"
	{% endif %}>
		<input
			id="{$ formId $}-payment-type-{$ loop.index $}"
			type="radio"
			class="payment-type-select"
			name="zahlweise"
			value="{$ paymentType $}"
			title="{$ paymentType|trans({}, 'paymentTypes') $}"
			{% if checkedPaymentType == paymentType %}checked="checked"{% endif %}
		>
		<label for="{$ formId $}-payment-type-{$ loop.index $}">
			{$ paymentType|trans({}, 'paymentTypes') $}
		</label>
	</li>
{% endfor %}
</ul>