<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"  xml:lang="de"  lang="de">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>Spenden f&uuml;r Freies Wissen - Wikimedia F&ouml;rdergesellschaft</title>
    <!--meta name="viewport" content="width=device-width, initial-scale=1.0"-->

    <meta name="title" content="Spenden für Freies Wissen - Wikimedia Fördergesellschaft" />
    <meta name="description" content="Wenn jeder nur einen kleinen Beitrag leisten würde, wäre unsere Spendenkampagne in einer Stunde vorüber." />

    <!-- open graph -->
    <meta property="og:title" content="Wenn jeder nur einen kleinen Beitrag leisten würde, wäre unsere Spendenkampagne in einer Stunde vorüber." />
    <meta property="og:type" content="non_profit" />
    <meta property="og:url" content="https://spenden.wikimedia.de/" />
    <meta property="og:image" content="https://www.wikipedia.de/img/Wikipedia_svg_logo-de.svg.png" />
    <meta property="og:site_name" content="Gemeinnnützige Wikimedia Fördergesellschaft mbH" />
    <meta property="og:description" content="Mir liegt Wikipedia am Herzen, deshalb habe ich gespendet. Denn was wäre das Netz ohne Wikipedia?" />

    <link rel="shortcut icon" href="{$ basepath $}/skins/10h16/_assets/img/favicon.ico" />
    <link rel="apple-touch-icon" href="{$ basepath $}/skins/10h16/_assets/img/apple-touch-icon.png" />

    {% block styles %}
    <link href="{$ basepath $}/res/css/fontcustom.css" rel="stylesheet" type="text/css" />
    <link href="{$ basepath $}/res/css/lib/jquery.ui/jquery-ui.css" rel="stylesheet" type="text/css" />
    <link href="{$ basepath $}/skins/10h16/_styles/styles.css" rel="stylesheet" type="text/css" />
    {% endblock %}

    {% block scripts %}
    <script type="text/javascript" src="{$ basepath $}/res/js/lib/jquery-1.11.3.min.js"></script>
    <script type="text/javascript" src="{$ basepath $}/res/js/lib/jquery-ui-1.11.2.min.js"></script>

    <script type="text/javascript" src="{$ basepath $}/res/js/lib/jquery.ui.touch-punch-0.2.3.min.js"></script>
    <script type="text/javascript" src="{$ basepath $}/res/js/lib/wlightbox.jquery.js"></script>
    <script type="text/javascript" src="{$ basepath $}/skins/10h16/_js/spenden.wikimedia.js"></script>
    <script type="text/javascript" src="{$ basepath $}/skins/10h16/_js/lightbox_init.js"></script>

    <script type="text/javascript" src="{$ basepath $}/res/js/lib/jquery.als-1.7.min.js"></script>
    <script type="text/javascript" src="{$ basepath $}/{$ 'res/js/wmde.js'|prefix_file $}"></script>
    <script type="text/javascript" src="{$ basepath $}/res/js/donationTicker.js"></script>
    <script type="text/javascript" src="{$ basepath $}/res/js/donationCommentsLightbox.js"></script>
    {% endblock %}

    <!--[if lt IE 10]>
    <script type="text/javascript" src="{$ basepath $}/res/js/lib/html5shiv.js"></script>
    <script type="text/javascript" src="{$ basepath $}/res/js/spenden.wikimedia-ie8.js"></script>

    <link href="{$ basepath $}/res/css/styles-ie8.css" rel="stylesheet" type="text/css" />
    <![endif]-->
</head>

<body class="{% block page_identifier %}{% endblock%}">
<div id="wrapper">

    <!-- Header -->
    <header id="header">
        <div class="container clearfix">
            {% block header %}
                {% include [ header_template, 'Template_Missing.twig' ] with { missing_template: 'header' } %}
            {% endblock %}
        </div>
    </header>


    <!-- Main -->
    <main id="main">
        <div class="container">
            {% block main %}
                {$ main | raw $}
            {% endblock %}
        </div>
    </main>

    <!-- Footer -->
    <footer id="footer">
        <div class="container">
            {% block footer %}
                {% include [ footer_template, 'Template_Missing.twig' ] with { missing_template: 'footer' } %}
            {% endblock %}
        </div>
    </footer>

    <!-- Banner -->
    {% block banner %}
    {% endblock %}
</div>


<!-- notice for clients without javascript -->
<div id="notice-wrapper">
    <div class="notice-window">
        {% include [ no_js_notice_template, 'Template_Missing.twig' ] with { missing_template: 'no JS notice' } %}
    </div>
</div>
<script type="text/javascript">
    /* hide javascript notice rightaway */
    document.getElementById( 'notice-wrapper' ).style.display = 'none';
</script>

{% include 'Piwik.twig' %}

<script>
{% for goal in piwikGoals %}
    _paq.push( [ 'trackGoal', '{$ goal $}' ] );
{% endfor %}
</script>

</body>
</html>
