{% extends 'Base_Layout.html.twig' %}

{% block main %}
	<section>
		<div class="container clearfix">
			<div class="ltcol">
				&nbsp;
			</div>

			<div class="ctcol">
				<div class="box box-common partial rounded no-margin">
					<div class="box-header container clearfix">
						{% if cancellationSuccessful %}
						<span class="icon-ok">
							{$ 'membership_cancellation_header'|trans({}) $}
						</span>
						{% else %}
						<span class="icon-bug">
							{$ 'membership_cancellation_failed_header'|trans({}) $}
						</span>
						{% endif %}
					</div>

					<div class="box-section box-footer">
						<div class="container clearfix">
							<p>
								{% if cancellationSuccessful %}
									{$ 'membership_cancellation_text'|trans( { '%membership.id%': membershipId } ) | raw $}
									{$ 'membership_cancellation_text2'| trans( { '%mailto_link%': 'mitglieder@wikimedia.de?subject=Mitgliedschaft%20' ~ membershipId } )  | raw $}
								{% else %}
									{$ 'membership_cancellation_failed_text' | trans( {
										'%membership.id%': membershipId,
										'%mailto_link%': 'mitglieder@wikimedia.de?subject=Mitgliedschaft%20' ~ membershipId
									} ) | raw $}
								{% endif %}
							</p>
						</div>
					</div>
				</div>
			</div>

			<div class="rtcol">
				<div class="icon-hand-right _icon-list-item first">
					<p>
						<strong>Mitgliedschaft</strong>
					</p>
					<p>
						<a href="{$ basepath $}/apply-for-membership" target="_blank">{$ 'back_to_membership' | trans $}</a>
					</p>
				</div>
				<div class="icon-hand-right _icon-list-item last">
					<p>
						<strong>Spenden</strong>
					</p>
					<p>
						<a href="{$ path( '/' ) $}" target="_blank">{$ 'back_to_donation' | trans $}</a>
					</p>
				</div>
			</div>
		</div>
	</section>
{% endblock %}