{% extends 'Base_Layout.html.twig' %}

{% block main %}
    <div id="app"
         data-application-vars="{$ use_of_funds_content|e('html_attr') $}"
         data-application-messages="{$ translations()|e('html_attr') $}"
         data-assets-path="{% if assets_path %}{$ assets_path $}{% else %}{$ basepath $}/skins/laika{% endif %}">
        <noscript>
            <h2>{$ site_metadata.no_javascript_header $}</h2>
            {$ web_content( 'pages/no_javascript' ) $}
        </noscript>
    </div>
{% endblock %}

{% block scripts %}
    {$ parent() $}
    <script src="{% if assets_path %}{$ assets_path $}{% else %}{$ basepath $}/skins/laika{% endif %}/js/funds_usage.js"></script>
{% endblock %}