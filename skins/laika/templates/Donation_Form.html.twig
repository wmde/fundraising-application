{% extends 'Base_Layout.html.twig' %}

{% block main %}
	<div id="app" 
		data-validate-amount-url="{$ basepath | e( 'html_attr' ) $}/validate-donation-amount"
		data-application-vars="{$ presetAmounts|json_encode $}" 
		data-application-messages="{$ translations()|e('html_attr') $}">
		<noscript>
			<h2>{$ 'no_javascript_title' | trans $}</h2>
			{$ web_content( 'pages/no_javascript' ) $}
		</noscript>
	</div>
{% endblock %}

{% block scripts %}
	{$ parent() $}
	<script src="{% if assets_path %}{$ assets_path $}{% else %}{$ basepath $}/skins/laika{% endif %}/js/donation_form.js"></script>
{% endblock %}