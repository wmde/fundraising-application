<div class="container">
    <div class="row">
        <div class="content col-xs-12 col-md-8">

            <p class="h1">
                {$ "donation_confirmation_head" | trans $}<br />
                {$ "donation_confirmation_head_summary" | trans( {
                    '%formattedAmount%': '<span class="text-uppercase">' ~ formattedAmount ~ '</span>',
                    '%interval%': '<span class="text-uppercase">' ~ donation.interval|trans({}, 'paymentIntervals') ~ '</span>',
                    '%paymentType%': '<span class="text-uppercase">' ~ donation.paymentType|trans( {}, 'paymentTypes' ) ~ '</span>',
                    '%status_description%': donation.status|trans( {}, 'paymentStatus' )
                } ) | raw $}
            </p>
            <p class="h2">
                {$ "donation_confirmation_subhead_donation_number" | trans( {
                    '%donation.id%': '<span class="strong">' ~ donation.id ~ '</span>'
                } ) | raw $}<br />

                {$ "donation_confirmation_subhead_direct_debit"| trans( {
                    '%formattedAmount%': '<span class="strong field-amount">' ~ formattedAmount  ~ '</span>',
                    '%interval%': '<span class="strong">' ~ donation.interval|trans({}, 'paymentIntervals') ~ '</span>',
                    '%paymentType%': '<span class="strong">' ~ donation.paymentType|trans( {}, 'paymentTypes' ) ~ '</span>',
                    '%status_description%': donation.status|trans( {}, 'paymentStatus' )
                } ) | raw $}
            </p>

            {% if donation.optsIntoNewsletter %}
                <p class="text-moved visible-sm-block visible-md-block visible-lg-block">
                    {$ "donation_confirmation_opts_into_newsletter" | trans | raw $}
                </p>
            {% endif %}

        </div>
        <div class="action-block col-xs-12 col-sm-5 col-sm-offset-7 col-md-offset-0 col-md-4">
            <ul class="list-menu link-back list-unstyled">
                <li><a href="#TODO" class="">Spende Ihr SEPA-Mandat k√∂nnen Sie hier einsehen</a></li>
                <li class="cancel">
                    <form action="{$ basepath $}/donation/cancel" method="post">
                        <button type="submit" name="go_storno" class="btn-link">{$ 'cancel_donation' | trans $}</button>
                        <input type="hidden" name="sid" value="{$ donation.id $}" />
                        <input type="hidden" name="utoken" value="{$ donation.updateToken $}">
                    </form>
                </li>
            </ul>
            {% if donation.optsIntoNewsletter %}
                <p class="text-moved hidden-sm hidden-md hidden-lg">
                    {$ "donation_confirmation_opts_into_newsletter" | trans | raw $}
                </p>
            {% endif %}
        </div>
    </div>
</div>
<div class="switch-container container-fluid container">
    <div class="row">
        <div class="col-xs-12 col-sm-5 col-sm-offset-7 col-md-offset-8 col-md-4">
            <a href="{$ basepath $}/apply-for-membership" class="btn btn-introduction bk-blue text-center text-uppercase">
                {$ "donation_confirmation_apply_for_membership" | trans $}
            </a>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <nav class="menu menu-footer col-xs-12 col-sm-5 col-sm-offset-7 col-md-offset-8 col-md-4">
            <ul class="list-menu list-unstyled">
                <li><a href="{$ basepath $}/comment/new"><span>{$ "add_donation_comment" | trans $}</span></a></li>
                {% include 'partials/share_on_social_networks.html.twig' %}
            </ul>
        </nav>
    </div>
</div>